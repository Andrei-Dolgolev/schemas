{
    "$id": "https://example.com/arrays.schema.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "description": "Journal statistics",
    "type": "object",
    "definitions": {
        "count_by_time_point": {
            "type": "object",
            "description": "Count by time interval",
            "properties": {
                "date":{
                    "description": "Date",
                    "type": "string"
                },
                "count": {
                    "description": "Count in that date",
                    "type": "integer",
                    "exclusiveMinimum": 0
                },
                "hour": {
                    "description": "hour",
                    "type": "string",
                    "optional": true

                }
                
                
            }
        },
        "common_tags_count": {
            "type": "object",
            "description": "Most common tags",
            "additionalProperties": {
                    "description": "Count of tag",
                    "type": "integer",
                    "exclusiveMinimum": 0
            }    
        }
        
    },
    "properties": {
        "created_at": {
            "type": "string",
            "description": "Statistics created at"
        },
        "schema": {
            "type": "string",
            "description": "link to that schema"
        },
        "data": {
            "type": "object",
            "description": "Statistics of journal entry tags",
            "properties": {
                "entries": {
                    "description": "Array of date count object",
                    "type": "array",
                    "items": {"$ref": "#/definitions/count_by_time_point"}
                },
                "most_common_tags": {
                    "description": "Object which containe predefined time intervals with their most common tags",
                    "type": "object",
                    "properties": {
                        "year": {
                            "type": "array",
                            "items": {"$ref": "#/definitions/common_tags_count"}
                        },
                        "month": {
                            "type": "array",
                            "items": {"$ref": "#/definitions/common_tags_count"}
                        },
                        "week": {
                            "type": "array",
                            "items": {"$ref": "#/definitions/common_tags_count"}
                        },
                        "day": {
                            "type": "array",
                            "items": {"$ref": "#/definitions/common_tags_count"}
                        }
                    }
                },
                "tags": {
                    "description": "Timerange by tag name",
                    "type": "object",
                    "properties": {
                        "year": {
                            "description": "Counts by given time interval with time points",
                            "type": "array",
                            "items": {"$ref": "#/definitions/count_by_time_point"}
                        },
                        "month": {
                            "description": "Counts by given time interval with time points",
                            "type": "array",
                            "items": {"$ref": "#/definitions/count_by_time_point"}
                        },
                        "day": {
                            "description": "Counts by given time interval with time points",
                            "type": "array",
                            "items": {"$ref": "#/definitions/count_by_time_point"}
                        }

                    }
                }
            }
        }
    }
}